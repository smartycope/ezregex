[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "EasyRegex"
version = "1.0.0"
authors = [
  { name="Copeland Carter", email="smartycope@gmail.com" },
]
description = "An readable and intuitive way to generate Regular Expressions"
readme = "README.md"
requires-python = ">=3.8"
classifiers = [
    "Programming Language :: Python :: 3",
    "License :: OSI Approved :: MIT License",
    "Operating System :: OS Independent",
]

[project.urls]
"Homepage" = "https://github.com/smartycope/EasyRegex.git"
